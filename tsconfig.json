{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "baseUrl": "./",
    "lib": [ "es2015" ],
    "paths": {
      "@models/*": ["src/models/*"],
      "@api/*": ["src/routes/api/*"],
      "@config": ["src/config/"]
    }
  }
}
